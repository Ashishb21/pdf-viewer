# Application Settings
APP_NAME="PDF Viewer Auth API"
DEBUG=true

# JWT Settings
SECRET_KEY="your-secret-key-change-this-in-production-use-a-long-random-string"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500"

# Credit System Settings
FREE_CREDITS_PER_USER=100
SUBSCRIPTION_CREDITS_MONTHLY=1000
SUBSCRIPTION_PRICE_MONTHLY=9.99

# Google OAuth Settings
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a project or use existing one
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add your domain to authorized origins
# 5. Add callback URL to authorized redirect URIs
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/api/auth/google/callback"